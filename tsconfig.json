{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "client/*": ["./client/*"]
    }
  },
  "include": ["packages/client", "packages/components", "packages/core", "packages/client/.vite/build", "forge.config.ts", ".vite/build"]
}
